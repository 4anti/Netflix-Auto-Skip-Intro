{
  "manifest_version": 3,
  "name": "Netflix Intro Skipper",
  "version": "1.0",
  "description": "Changes the 'Skip Intro' button text and skips the intro automatically.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.netflix.com/*"],
      "js": ["content.js"]
    }
  ]
}